    <% @tags.each do |tag| %>
    <p><a href="/transactions/tag/<%= tag.id %>"><%= tag.name %></a></p>
    <br>
    <% end %>
  </nav>
  <main>
    <%= yield %>
  </main>
  <div id="navbottom">
    <p><a href="/transactions/new">New Transaction</a></p>
    <br>
    <p><a href="/tags/new">New Tag</a></p>
    <br>
    <p><a href="/vendors/new">New Vendor</a></p>
    <br>
    <p><a href="/budget/1">Edit Budget Amount</a></p>
  </div>
</body>
</html>
