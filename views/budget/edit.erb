<div id="panelhead">
  <h2>Edit Budget</h2>
  <br>
</div>
<div id="panelmain">
<div id="plaintable">
<form action="/budget/<%= @budget.id %>" method="post">
<table>
  <tbody>
    <tr>
      <td><label for="amount">Amount: </label></td>
      <td><input type="number" min="0" placeholder="0.00" step="0.01" id = "amount" name="amount" value="<%= @budget.amount_pence_to_pounds() %>"></td>
    </tr>
  </tbody>
</table>
<p><input type='submit' value="Submit"></p>
</form>
</div>
</div>
