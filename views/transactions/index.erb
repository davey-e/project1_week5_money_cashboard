<div id="panelhead">
<h2>All Transactions</h2>
<br>
<p>Total: £<%= Transaction.amount_pence_to_pounds(@transactions_total) %></p>
<br>
<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Tag</th>
      <th>Vendor</th>
    </tr>
  </thead>
</table>
</div>
<div id="panelmain">
<table>
  <tbody>
    <% @transactions.each do |transaction| %>
    <% amount = Transaction.amount_pence_to_pounds(transaction.amount) %>
    <% tag = transaction.tag() %>
    <% vendor = transaction.vendor() %>
    <tr>
      <td> <a href="/transactions/<%= transaction.id %>">£<%= amount %></a></td>
      <td><%= tag.name %></td>
      <td><%= vendor.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
