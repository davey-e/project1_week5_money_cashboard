<div id="panelhead">
<h2>All Transactions</h2>
<br>
<p>Total: £<%= "#{(@transactions_total / 100).to_f}" %></p>
<br>
<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Tag</th>
      <th>Vendor</th>
    </tr>
  </thead>
</table>
</div>
<div id="panelmain">
<table>
  <tbody>
    <% @transactions.each do |transaction| %>
    <tr>
      <td> <a href="/transactions/<%= transaction.id %>">£<%= transaction.amount_pence_to_pounds() %></a></td>
      <td><%= transaction.tag.name %></td>
      <td><%= transaction.vendor.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
