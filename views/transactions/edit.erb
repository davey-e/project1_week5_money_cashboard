<div id="panelhead">
  <h2>Edit Transaction</h2>
  <br>
  <!-- <p>Please enter a name for the new vendor</p> -->
</div>
<div id="panelmain">
<div id="plaintable">
<form action="/transactions/<%= @transaction.id %>" method="post">
<table>
  <tbody>
    <tr>
      <td><label for="transaction_date">Date: </label></td>
      <td> <input type="date" id="transaction_date" name="transaction_date" value="<%= @transaction.format_date %>"> </td>
    </tr>
    <tr>
      <td><label for="amount">Amount: </label></td>
      <td><input type="number" min="0" placeholder="0.00" step="0.01" id = "amount" name="amount" value="<%= @transaction.amount_pence_to_pounds() %>"></td>
    </tr>
    <tr>
      <td><label for="tag_id">Tag: </label></td>
      <td>
        <select name="tag_id" id="tag_id">
          <% @tags.each do |tag|%>
          <option <%= "selected" if @transaction.tag_id == tag.id %> value="<%= tag.id %>"><%= tag.name %></option>
          <% end %>
        </select>
      </td>
    </tr>
    <tr>
      <td><label for="vendor_id">Vendor: </label></td>
      <td>
        <select name="vendor_id" id="vendor_id">
          <% @vendors.each do |vendor|%>
          <option <%= "selected" if @transaction.vendor_id == vendor.id %> value="<%= vendor.id %>"><%= vendor.name %></option>
          <% end %>
        </select>
      </td>
    </tr>
  </tbody>
</table>
<p><input type='submit' value="Submit"></p>
</form>
</div>
</div>
