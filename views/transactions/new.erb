<div id="panelhead">
  <h2>New Transaction</h2>
  <br>
  <p>Please enter the details of the new transaction:</p>
</div>
<div id="panelmain">
<div id="plaintable">
<form action="/transactions" method="post">
<table>
  <tr>
    <td><label for="transaction_date">Date: </label></td>
    <td> <input type="date" id="transaction_date" name="transaction_date" value=""> </td>
  </tr>
  <tr>
    <td><label for="amount">Amount: </label></td>
    <td><input type="number" min="0" placeholder="0.00" step="0.01" id = "amount" name="amount" value=""></td>
  </tr>
  <tr>
    <td><label for="tag_id">Tag: </label></td>
    <td>
      <select name="tag_id" id="tag_id">
        <% @tags.each do |tag|%>
        <option value="<%= tag.id %>"><%= tag.name %></option>
        <% end %>
      </select>
    </td>
  </tr>
  <tr>
    <td><label for="vendor_id">Vendor: </label></td>
    <td>
      <select name="vendor_id" id="vendor_id">
        <% @vendors.each do |vendor|%>
        <option value="<%= vendor.id %>"><%= vendor.name %></option>
        <% end %>
      </select>
    </td>
  </tr>
</table>
<p><input type='submit' value="Submit"></p>
</form>
</div>
</div>
